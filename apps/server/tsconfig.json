{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "types": [
      "node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./framework/types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./**/*"
  ]
}
